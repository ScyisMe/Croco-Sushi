# =============================================================================
# Environment Variables для Croco Sushi
# Скопіюйте цей файл в .env та заповніть значення
# =============================================================================

# Database
DATABASE_URL=postgresql+asyncpg://croco:croco_password@postgres:5432/croco_sushi
POSTGRES_USER=croco
POSTGRES_PASSWORD=croco_password
POSTGRES_DB=croco_sushi

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
DEBUG=false
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,crocosushi.com.ua,www.crocosushi.com.ua

# API Settings
API_V1_PREFIX=/api/v1
MAX_LOGIN_ATTEMPTS=5

# Frontend
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_SITE_URL=https://crocosushi.com.ua

# SMS Service (Turbosms, etc.)
SMS_API_KEY=your-sms-api-key
SMS_SENDER=CrocoSushi

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@crocosushi.com.ua

# Payment (LiqPay, etc.)
LIQPAY_PUBLIC_KEY=your-liqpay-public-key
LIQPAY_PRIVATE_KEY=your-liqpay-private-key

# Upload settings
MAX_UPLOAD_SIZE=52428800
UPLOAD_PATH=/app/uploads

