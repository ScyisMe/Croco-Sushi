# =============================================================================
# PRODUCTION ENVIRONMENT (SERVER ONLY)
# Save this file as .env on your VPS next to docker-compose.prod.yml
# =============================================================================

# --- Database ---
# Replace 'strong_password_here' with a real complex password!
POSTGRES_USER=croco_admin
POSTGRES_PASSWORD=strong_password_here
POSTGRES_DB=croco_sushi_prod
DATABASE_URL=postgresql+asyncpg://croco_admin:strong_password_here@postgres:5432/croco_sushi_prod

# --- Redis ---
# Internal Docker URL - do not change
REDIS_URL=redis://redis:6379/0

# --- Security ---
# IMPORTANT: Generate new secure keys! 
# You can use "openssl rand -hex 32" in terminal to generate them
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_12345
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING_67890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Application ---
# Production settings
DEBUG=false
ENVIRONMENT=production
ALLOWED_HOSTS=crocosushi.com,www.crocosushi.com,api.crocosushi.com,localhost,127.0.0.1

# --- CORS ---
# Allow your frontend domain to talk to the backend
CORS_ORIGINS=https://crocosushi.com,https://www.crocosushi.com

# --- API Settings ---
API_V1_PREFIX=/api/v1
MAX_LOGIN_ATTEMPTS=5

# --- Frontend ---
# This is used inside the container build
NEXT_PUBLIC_API_URL=https://api.crocosushi.com
NEXT_PUBLIC_SITE_URL=https://crocosushi.com

# --- Celery ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Email (SMTP) ---
# You need a real SMTP service (Gmail, SendGrid, etc.)
# For Gmail, you need an "App Password" (not your login password)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_real_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=admin@crocosushi.com
